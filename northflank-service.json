{
  "name": "proof-of-mind-pwa",
  "description": "Proof of Mind PWA - Neurodiversity Transformation Platform",
  "serviceType": "combined",
  "source": {
    "type": "git",
    "projectUrl": "https://github.com/MyMindVentures/Proof-of-Mind-From-Chaos-to-Clarity",
    "projectType": "github",
    "projectBranch": "main",
    "buildType": "dockerfile",
    "dockerfile": "Dockerfile"
  },
  "buildSettings": {
    "buildType": "dockerfile",
    "dockerfile": {
      "dockerFilePath": "/Dockerfile",
      "dockerWorkDir": "/"
    }
  },
  "deployment": {
    "instances": 2,
    "plan": "nf-compute-100-1"
  },
  "billing": {
    "buildPlan": "nf-compute-400-16",
    "deploymentPlan": "nf-compute-100-1"
  },
  "networking": {
    "ports": [
      {
        "name": "http",
        "port": 80,
        "internalPort": 80,
        "protocol": "http",
        "public": true
      }
    ]
  },
  "environment": {
    "NODE_ENV": "production",
    "VITE_APP_NAME": "Proof of Mind",
    "VITE_API_BASE_URL": "https://api.proofofmind.app"
  },
  "healthCheck": {
    "path": "/health",
    "port": 80,
    "interval": 30
  },
  "resources": {
    "requests": {
      "cpu": "100m",
      "memory": "256Mi"
    },
    "limits": {
      "cpu": "500m",
      "memory": "512Mi"
    }
  },
  "scaling": {
    "minReplicas": 1,
    "maxReplicas": 5,
    "targetCPUUtilizationPercentage": 70
  },
  "vcsData": {
    "projectUrl": "https://github.com/MyMindVentures/Proof-of-Mind-From-Chaos-to-Clarity",
    "projectType": "github",
    "projectBranch": "main"
  }
}
